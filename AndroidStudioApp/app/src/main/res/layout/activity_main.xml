<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!--    Header group-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/logobk">
        </ImageView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:text="My Room Environment"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="17dp"
            android:textColor="#303030">
        </TextView>
    </LinearLayout>
    <!--    End: Header group-->

    <!--    Realtime group-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:background="#E4E9EE"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTemp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="70"
                    android:text="Null"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:textColor="#F44336"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:text="Temperature"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#F44336"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtHum"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="70"
                    android:text="Null"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:text="Humidity"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#2196F3"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:text="Heat\nIndex"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#FF5722"
                android:gravity="right|center_vertical"
                android:layout_margin="10dp">

            </TextView>

            <TextView
                android:id="@+id/txtHeatIdx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:text="Null"
                android:textSize="50dp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:gravity="left|center_vertical"
                android:layout_margin="10dp">

            </TextView>

        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <!--    End: Realtime group-->

    <!--        TodayStatistic group-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:background="#E4E9EE"
        android:orientation="vertical">
<!--        TodayStatistic group-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="10sp"
            android:src="@drawable/room">
        </ImageView>

    </LinearLayout>
    <!--        End: TodayStatistic group-->

    <!--    Button group-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="#E4E9EE"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:text="Ventilation Fan"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#303030"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp">

            </TextView>

            <com.github.angads25.toggle.widget.LabeledSwitch
                android:id="@+id/appButton1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:textSize="30dp"

                app:textOn="ON"
                app:textOff="OFF"
                app:colorOn="#2196F3"
                app:colorOff="#D5D5D5"

                app:on="false"
                app:colorBorder="#D5D5D5">
            </com.github.angads25.toggle.widget.LabeledSwitch>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:text="Curtains Control"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#303030"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp">

            </TextView>

            <com.github.angads25.toggle.widget.LabeledSwitch
                android:id="@+id/appButton2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:textSize="30dp"

                app:textOn="ON"
                app:textOff="OFF"
                app:colorOn="#2196F3"
                app:colorOff="#D5D5D5"

                app:on="false"
                app:colorBorder="#D5D5D5">
            </com.github.angads25.toggle.widget.LabeledSwitch>
        </LinearLayout>

    </LinearLayout>
    <!--    End: Button group-->

    <!--    Footer group-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:text="By Nguyen Cong Khiem (2211570)"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="14sp"
        android:textColor="@color/black">
    </TextView>
    <!--    End: Footer group-->

</LinearLayout>